{% extends 'layouts/layout-full-width.html.twig' %}

{% block title %}{{ user.name }} Profile{% endblock %}

{% block contentFullWidth %}
    <h1>{{ user.name }}'s Profile</h1>

    <p><strong>Username:</strong> {{ user.name }}</p>
    <p><strong>Bio:</strong> {{ user.bio}}</p>
    {% for manga in user.mangas %}
    <li>
        <img class="single-manga-cover" src="{{ asset('uploads/covers/' ~ manga.cover) }}"/>
        <p>{{ manga.name }}</p>
    </li>
    {% endfor %}
{% endblock %}
